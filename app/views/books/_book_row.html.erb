<div class="well">
  <div class="row">
    <div class="col-xs-8">
      <h4><%= book.name %></h4>
      <h4><%= book.quantity %><%= t "books.index.items_stock" %></h4>
    </div>
    <div class="col-xs-4">
      <h4 class="text-right"><%= t ".unit_price" %>: 
        <%= number_to_currency book.price %></h4>
      <% if logged_in? %>
        <%= form_for order_line, remote: true do |f| %>        
          <div class="input-group">
            <%= f.number_field :number, value: 1, 
              class: "form-control", min: 1 %>
            <div class="input-group-btn">
              <%= f.hidden_field :book_id, value: book.id %>
              <%= f.submit t("books.show.add_to_cart"), 
                class: "btn btn-warning" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
