<div class="container">
  <div class="well">
    <div class="row">
      <div class="col-xs-8">
        <h4><%= book.name %></h4>
      </div>
      <div class="col-xs-4">
        <%= form_for order_line, remote: true do |f| %>
          <h4 class="text-right"><%= t "books.book_row.unit_price" %>: 
            <%= number_to_currency order_line.price %>
          </h4>
          <div class="row">
            <div class="col-xs-4">
              <%= f.number_field :number, value: order_line.number.to_i, 
                class: "form-control", min: 1 %>
              <%= f.hidden_field :book_id, value: book.id %>
            </div>
            <div class="col-xs-8 text-right">
              <div class="btn-group">
                <%= f.submit t(".update_quantity"), class: "btn btn-warning" %>
                <%= link_to t(".delete"), order_line, 
                  {data: {confirm: t(".confirm", name: order_line.book.name)}, 
                  method: :delete, remote: true, class: "btn btn-danger"} %>
              </div>
            </div>
          </div>
          <h4 class="text-right"><%= t ".total_price" %>: 
            <%= number_to_currency order_line.total_price %>
          </h4>
        <% end %>
      </div>
    </div>
  </div>
</div>
