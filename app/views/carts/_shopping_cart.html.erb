<% provide :title, t(".title") %>
<% if !@order_line.nil? && @order_line.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @order_line.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<% if @order_lines.size.any? %>
  <% @order_lines.each do |order_line| %>
    <%= render "carts/cart_row", book: order_line.book, 
      order_line: order_line, show_total: true %>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-offset-2 col-md-offset-3">
        <div class="col-xs-12 col-sm-6 col-md-6">
          <%= form_for current_order do |f| %>
            <div class="form-group">
              <%= f.text_field :address, class: "form-control", 
                placeholder: t(".add_address") %>
            </div>
            <div class="form-group">
              <center>
                <%= f.submit t(".con_to_buy"), class: "btn btn-warning" %>
              </center>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <p class="text-center">
    <%= t ".notice" %>
    <%= link_to "go back", books_path %>
    <%= t ".notice2" %>
  </p>
<% end %>
