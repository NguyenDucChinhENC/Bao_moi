<div class="container">
  <header id="header">
    <div class="row">
      <div class="col-lg-12 col-md-12">
        <div class="header-top">
          <div class="header-top-left">
            <ul class="top-nav">
              <li><%= link_to t(".home_title"), root_path %></li>
              <li><%= link_to t(".about_title"), "#" %></li>
              <li><%= link_to t(".contact_title"), "#" %></li>
              <li><%= link_to t(".error_page_title"), root_path %></li>
            </ul>
          </div>
          <div class="header-top-right">
            <form action="#" class="search_form">
              <%= text_field_tag :search, "", placeholder: t(".search_title") %>
              <input type="submit" value="">
            </form>
          </div>
        </div>
        <div class="header-bottom">
          <div class="header-bottom-left"><a class="logo">
            <%= t ".name_title_1" %><strong><%= t ".name_title_2" %>
            </strong> <span><%= t ".intro" %></span></a></div>
          <%= link_to image_tag "addbanner_728x90_V1.jpg",
            class: "header-bottom-right" %>
        </div>
      </div>
    </div>
  </header>
  <div id="navarea">
    <nav class="navbar navbar-default" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed"
            data-toggle="collapse" data-target="#navbar" aria-expanded="false"
            aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span> <span class="icon-bar"></span>
            <span class="icon-bar"></span> </button>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav custom-nav">
            <li class=""><%= link_to t(".home_title"), root_path %></li>
            <li class="dropdown"> <a class="" data-toggle="dropdown"
              role="button" aria-expanded="false"><%= t ".archives"  %></a>
              <ul class="dropdown-menu" role="menu">
                <% (1..4).each do |a| %>
                  <li><%= link_to t(".archives"), "#" %></li>
                <%end %>
              </ul>
            </li>
            <li><%= link_to t(".single_page"), "#" %></li>
            <li><%= link_to t(".contact_title"), "#" %></li>
            <li><%= link_to t(".error_title"), "#" %></li>
          </ul>
        </div>
      </div>
    </nav>
  </div>
</div>
