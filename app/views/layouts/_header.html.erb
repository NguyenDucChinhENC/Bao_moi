<div class="container">
  <header id="header">
    <div class="row">
      <div class="col-lg-12 col-md-12">
        <div class="header-top">
          <div class="header-top-left">
            <ul class="top-nav">
              <li><%= link_to t(".home_title"), root_path %></li>
              <li><%= link_to t(".about_title"), "#" %></li>
              <li><%= link_to t(".contact_title"), "#" %></li>
            </ul>
          </div>
          <div class="header-top-right">
            <ul class="top-nav1">
              <li>
                <form action="#" class="search_form">
                  <%= text_field_tag :term, params[:term], placeholder: t(".search_title") %>
                  <input type="submit" value="">
                </form>
              </li>
              <% if logged_in? %>
                <li><%= link_to t(".users"), current_user %></li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <%= t".account" %> <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to t(".profile"), current_user %></li>
                    <li><%= link_to t(".setting"), "#" %></li>
                    <li class="divider"></li>
                    <li>
                      <%= link_to t(".log_out"), logout_path, method: :delete %>
                    </li>
                  </ul>
                </li>
                <%= link_to t(".log_out"), logout_path, method: :delete %>
              <% else %>
                <li><%= link_to t(".sign_up"), new_user_path %></li>
                <li><%= link_to t(".login"), login_path %></li>
              <% end %>
            </ul>
          </div>
        </div>
        <div class="header-bottom">
          <div class="header-bottom-left"><a class="logo">
            <%= t ".name_title_1" %><strong><%= t ".name_title_2" %>
            </strong><span><%= t ".intro" %></span></a></div>
        </div>
      </div>
    </div>
  </header>
  <div id="navarea">
    <nav class="navbar navbar-default" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed"
            data-toggle="collapse" data-target="#navbar" aria-expanded="false"
            aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span> <span class="icon-bar"></span>
            <span class="icon-bar"></span> </button>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav custom-nav">
            <li class=""><%= link_to t(".home_title"), root_path %></li>
            <li class="dropdown"> <a class="" data-toggle="dropdown"
              role="button" aria-expanded="false"><%= t ".categories"  %></a>
              <ul class="dropdown-menu" role="menu">
                <% Category.all.each do |c| %>
                  <li><%= link_to c.name, c %></li>
                <%end %>
              </ul>
            </li>
            <li class="dropdown"> <a class="" data-toggle="dropdown"
              role="button" aria-expanded="false"><%= t ".publishing_companies"  %></a>
              <ul class="dropdown-menu" role="menu">
                <% PublishingCompany.all.each do |p| %>
                  <li><%= link_to p.name, p %></li>
                <%end %>
              </ul>
            </li>
            <li><%= link_to t(".books"), Book %></li>
            <li><%= link_to t(".error_title"), "#" %></li>
          </ul>
        </div>
      </div>
    </nav>
  </div>
</div>
