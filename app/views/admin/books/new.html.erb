<% provide :title, t(".title") %>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
      <%= form_for [:admin, @book] do |f| %>
      <hr class="colorgraph">
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.text_field :name, class: "form-control input-lg",
              placeholder: t(".name") %>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.number_field :price, class: "form-control input-lg",
              placeholder: t(".price") %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.select :publishing_company_id,
              PublishingCompany.all.collect {|p| [ p.name, p.id ]},
              class: "form-control input-lg" %>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.select :category_id,
              Category.all.collect {|c| [ c.name, c.id ]},
              class: "form-control input-lg" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= f.text_field :summary, class: "form-control input-lg",
          placeholder: t(".summary") %>
      </div>
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.number_field :quantity, class: "form-control input-lg",
              placeholder: t(".quantity") %>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.file_field :picture, class: "form-control input-lg",
              placeholder: t(".picture") %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-md-6"><%= f.submit t(".add"),
          class: "btn btn-warning btn-block btn-lg" %></div>
      </div>
      <% end %>
    </div>
  </div>
</div>
